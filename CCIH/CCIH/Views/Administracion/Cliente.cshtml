@model CCIH.Entities.Administracion.ClienteEnt


@{
    ViewBag.Title = "Cliente";
    Layout = "~/Views/Shared/_Layout_Administracion.cshtml";
}


<main id="main" class="main">

    <div class="pagetitle">
        <h1>Crear Cliente</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="~/Views/Administracion/index.cshtml">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="#">Crear Cliente</a></li>
            </ol>
        </nav>
    </div><!-- End Page Title -->


    <section class="section">
        <div class="row">




            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Informacion del cliente</h5>

                    <!-- General Form Elements -->
                    @using (Html.BeginForm("CrearMatricula", "Administracion", FormMethod.Post))
                    {
                        <div class="row mb-3">
                            <label for="inputText" class="col-sm-2 col-form-label">Cedula</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.Cedula, new { @type = "text", @placeholder = "Digite la Cedula", @class = "form-control" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
                            <div class="col-sm-7">
                                @Html.TextBoxFor(m => m.Correo, new { @type = "email", @placeholder = "Digite el correo electronico", @class = "form-control" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputPassword" class="col-sm-2 col-form-label">Nombre</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.Nombre, new { @type = "Text", @placeholder = "Digite el Nombre", @class = "form-control" })
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputNumber" class="col-sm-2 col-form-label">Primer Apellido</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.Apellido1, new { @type = "Text", @placeholder = "Digite el Primer Apellido", @class = "form-control" })
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="inputNumber" class="col-sm-2 col-form-label">Segundo Apellido</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.Apellido2, new { @type = "Text", @placeholder = "Digite el Segundo Apellido", @class = "form-control" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputDate" class="col-sm-2 col-form-label">Fecha de Nacimiento</label>
                            <div class="col-sm-3">
                                @Html.TextBoxFor(m => m.FechaNacimiento, new { @type = "date", @class = "form-control" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label for="inputNumber" class="col-sm-2 col-form-label">Telefono</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.Telefono, new { @type = "Text", @placeholder = "Digite el Telefono", @class = "form-control" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Direccion</label>
                            <div class="col-sm-10">
                                @Html.TextAreaFor(m => m.Direccion, new { @type = "Text", @placeholder = "Digite la direccion", @class = "form-control", @style = "height: 50px" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Estatus</label>
                            <div class="col-sm-3">
                                @Html.DropDownListFor(m => m.IdEstatus, ViewBag.Estatus as List<SelectListItem>, "Selecione el estatus", new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Rol</label>
                            <div class="col-sm-3">
                                @Html.DropDownListFor(m => m.IdRol, ViewBag.Roles as List<SelectListItem>, "Selecione el Rol", new { @class = "form-control" })
                            </div>
                        </div>


                        <div class="row mb-5">
                            <div class="col-10">
                                <button type="submit" class="btn btn-primary">Ingresar Cliente</button>
                            </div>
                        </div>

                    }

                </div>
            </div>

        </div>

    </section>

</main><!-- End #main -->
